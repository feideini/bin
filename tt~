}
}
else
{
if ($rdir=="")
{
print "curl -o $ldir/$akt http://ec2-35-160-211-119.us-west-2.compute.amazonaws.com/transfer/$akt\n";
system "curl -o $ldir/$akt http://ec2-35-160-211-119.us-west-2.compute.amazonaws.com/transfer/$akt";
}
else
{
